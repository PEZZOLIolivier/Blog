{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1  class="col mb-3 text-center">Liste des cat√©gories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="col">
                <td>{{ category.name }}</td>
                <td class="text-right">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">Voir les articles</a>
