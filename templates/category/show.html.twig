{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="col mb-3 text-center">{{ category.name }}</h1>



    <div>
        <h2 class="col mb-3 text-center">Liste des articles de la catégorie {{ category.name }}</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>{{ article.content }}</td>
                        <td>
                            <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        <a href="{{ path('app_category_index') }}">retour à la liste des catégories</a>
    </div>

{% endblock %}
