{% extends 'base.html.twig' %}

{% block title %}Formulaire d'enregistrement{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1  class="col mb-3 text-center">Formulaire d'enregistrement</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.userName, {
            label: 'Nom d\'utilisateur'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.firstName, {
            label: 'Pr√©nom'
        }) }}
        {{ form_row(registrationForm.lastName, {
            label: 'Nom de famille'
        }) }}
        {{ form_row(registrationForm.birthday, {
            label: 'Anniversaire'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Accepter les conditions'
        }) }}
        <div class="row">
            <button type="submit" class="col btn btn-dark text-center m-3 mt-3">S'enregistrer</button>
        </div>

    {{ form_end(registrationForm) }}
{% endblock %}
