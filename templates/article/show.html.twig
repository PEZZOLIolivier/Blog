{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_comment_new', { 'id': article.id }) }}">Ajouter un commentaire</a>
    </div>

    <div>
        {% for comment in comments %}
            <div><b>{{ "now"|date("d/m/Y H:i:s") }} - {{ comment.user.userName }} à dit:</b></div>
            <div>{{ comment.content }}</div>
        {% endfor %}
    </div>

    <a href="{{ path('app_category_index') }}">retour à la liste des catégories</a>
{% endblock %}
